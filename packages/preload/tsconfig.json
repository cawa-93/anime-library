{
  "compilerOptions": {

    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types" : ["node"],


    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
