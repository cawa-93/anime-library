{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@shared/*": [
        "../shared/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/**/*.d.ts",
    "../../node_modules/@types/wicg-mediasession/index.d.ts"
  ]
}
