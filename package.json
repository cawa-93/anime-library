{
  "private": true,
  "name": "anime-library",
  "author": "Alex Kozack (https://kozack.me)",
  "description": "Приложение для просмотра аниме (в работе).",
  "homepage": "https://github.com/cawa-93/anime-library#readme",
  "engines": {
    "node": ">=v16.3",
    "npm": ">=7.18.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cawa-93/anime-library.git"
  },
  "bugs": {
    "url": "https://github.com/cawa-93/anime-library/issues"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "concurrently \"npm:build-assets:*\"",
    "build-assets:main": "cd ./packages/main && vite build",
    "build-assets:preload": "cd ./packages/preload && vite build",
    "build-assets:renderer": "cd ./packages/renderer && vite build",
    "compile": "npm run build && electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "cross-env MODE=test npm run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck": "node scripts/buildEnvTypes.js && concurrently --raw \"npm:typecheck:*\"",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json"
  },
  "browserslist": [
    "Chrome 91"
  ],
  "simple-git-hooks": {
    "pre-commit": "./scripts/tsc-staged.sh && npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@types/uuid": "8.3.1",
    "@types/wicg-mediasession": "1.1.2",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@vitejs/plugin-vue": "1.3.0",
    "autoprefixer": "10.3.1",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "electron": "13.1.8",
    "electron-builder": "22.11.7",
    "electron-devtools-installer": "3.2.0",
    "eslint": "7.32.0",
    "eslint-plugin-vue": "7.15.1",
    "lint-staged": "11.1.2",
    "rollup-plugin-copy": "3.4.0",
    "sass": "1.37.5",
    "simple-git-hooks": "2.5.1",
    "spectron": "15.0.0",
    "typescript": "4.3.5",
    "vite": "2.4.4",
    "vite-plugin-pwa": "0.9.3",
    "vue-tsc": "0.2.2"
  },
  "dependencies": {
    "@sentry/browser": "6.10.0",
    "@sentry/electron": "2.5.1",
    "@sentry/integrations": "6.10.0",
    "@vueuse/core": "5.2.0",
    "bootstrap": "5.0.2",
    "electron-updater": "4.4.3",
    "electron-window-state": "5.0.3",
    "idb": "6.1.2",
    "uuid": "8.3.2",
    "vue": "3.1.5",
    "vue-router": "4.0.10"
  }
}
